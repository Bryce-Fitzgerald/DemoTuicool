<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:app1="http://schemas.android.com/apk/res/"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/src_other_activity_bg"
    tools:context="com.example.exoo_sample.MoreSettingActivity" >

    <include
        android:id="@+id/toolbar_moresetting"
        layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/toolbar_moresetting" >

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/src_other_activity_bg"
            android:layout_alignParentTop="true" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="18dp" >

                <RelativeLayout
                    android:id="@+id/layout1_set_wifi_only"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="?attr/src_LinearLayout_bg" >

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:text="仅WIFI时加载图片"
                        android:textColor="?attr/text_article_title"
                        android:textSize="17sp" />

                    <com.sevenheaven.iosswitch.ShSwitchView
                        xmlns:shSwitch="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/switch_view_onlyWIFI"
                        android:layout_width="62dip"
                        android:layout_height="38dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        shSwitch:shadowSpace="7dip"
                        shSwitch:tintColor="#ffff4e00" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout2_set_download_wifi"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="3dp"
                    android:background="?attr/src_LinearLayout_bg" >

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:text="WIFI时智能下载文章"
                        android:textColor="?attr/text_article_title"
                        android:textSize="17sp" />

                    <com.sevenheaven.iosswitch.ShSwitchView
                        xmlns:shSwitch="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/switch_view_downloadWIFI"
                        android:layout_width="62dip"
                        android:layout_height="38dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        shSwitch:shadowSpace="7dip"
                        shSwitch:tintColor="#ffff4e00" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout3_set_huadong_fanye"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="3dp"
                    android:background="?attr/src_LinearLayout_bg" >

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:text="正文左右滑动翻页"
                        android:textColor="?attr/text_article_title"
                        android:textSize="17sp" />

                    <com.sevenheaven.iosswitch.ShSwitchView
                        xmlns:shSwitch="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/switch_view_huadong"
                        android:layout_width="62dip"
                        android:layout_height="38dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        shSwitch:shadowSpace="7dip"
                        shSwitch:tintColor="#ffff4e00" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout4_set_open_inside_link"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="3dp"
                    android:background="?attr/src_LinearLayout_bg" >

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:text="外部浏览器打开正文内部链接"
                        android:textColor="?attr/text_article_title"
                        android:textSize="17sp" />

                    <com.sevenheaven.iosswitch.ShSwitchView
                        xmlns:shSwitch="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/switch_view_open_inside_link"
                        android:layout_width="62dip"
                        android:layout_height="38dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        shSwitch:shadowSpace="7dip"
                        shSwitch:tintColor="#ffff4e00" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout5_set_open_comment"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="3dp"
                    android:background="?attr/src_LinearLayout_bg" >

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:text="正文右滑出评论页面"
                        android:textColor="?attr/text_article_title"
                        android:textSize="17sp" />

                    <com.sevenheaven.iosswitch.ShSwitchView
                        xmlns:shSwitch="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/switch_view_open_comment"
                        android:layout_width="62dip"
                        android:layout_height="38dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        shSwitch:shadowSpace="7dip"
                        shSwitch:tintColor="#ffff4e00" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout6_set_voice_fanye"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="3dp"
                    android:background="?attr/src_LinearLayout_bg" >

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:text="正文音量键翻页"
                        android:textColor="?attr/text_article_title"
                        android:textSize="17sp" />

                    <com.sevenheaven.iosswitch.ShSwitchView
                        xmlns:shSwitch="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/switch_view_voice_fanye"
                        android:layout_width="62dip"
                        android:layout_height="38dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        shSwitch:shadowSpace="7dip"
                        shSwitch:tintColor="#ffff4e00" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="3dp"
                    android:background="?attr/src_LinearLayout_bg" >

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:text="正文字号大小调整"
                        android:textColor="?attr/text_article_title"
                        android:textSize="17sp" />

                    <Spinner
                        android:id="@+id/widgets_spinner"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="18dp"
                        android:background="?attr/src_LinearLayout_bg"
                        
                        android:entries="@array/font_sizes" />
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</RelativeLayout>